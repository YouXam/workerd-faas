{
	"name": "workerd-faas",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "pnpm run build:main && pnpm run build:d1-gateway",
		"build:main": "wrangler deploy --dry-run --outdir=dist/main --config wrangler.jsonc",
		"build:d1-gateway": "wrangler deploy --dry-run --outdir=dist/d1-gateway --config wrangler.d1-gateway.jsonc",
		"dev": "concurrently \"pnpm run watch\" \"pnpm run start\"",
		"watch": "nodemon --watch src --watch tsconfig.json --watch worker-configuration.d.ts --watch package.json --watch pnpm-lock.yaml --ext ts,json,d.ts --exec \"pnpm run build\"",
		"start": "while read line; do export $line; done < .env && mkdir -p data/do && mkdir -p data/files && workerd serve config.capnp --verbose --experimental -w",
		"cf-typegen": "wrangler types",
		"test": "python3 tests/run_tests.py",
		"test:oidc": "python3 tests/run_tests.py --suite oidc",
		"test:auth": "python3 tests/run_tests.py --suite auth",
		"test:function": "python3 tests/run_tests.py --suite function",
		"test:version": "python3 tests/run_tests.py --suite version",
		"test:runtime": "python3 tests/run_tests.py --suite runtime"
	},
	"devDependencies": {
		"@types/node": "^24.6.2",
		"concurrently": "^9.2.1",
		"nodemon": "^3.1.10",
		"typescript": "^5.5.2",
		"wrangler": "^4.38.0"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.3",
		"hono": "^4.9.8",
		"jose": "^6.1.0",
		"zod": "^4.1.11"
	}
}
